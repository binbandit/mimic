export EDITOR="{{ editor }}"
export VISUAL="$EDITOR"
export PAGER="less"

export PATH="$HOME/bin:$HOME/.local/bin:$HOME/.cargo/bin:/usr/local/bin:$PATH"

autoload -Uz compinit
compinit

HISTFILE=~/.zsh_history
HISTSIZE=50000
SAVEHIST=50000
setopt HIST_IGNORE_ALL_DUPS
setopt HIST_FIND_NO_DUPS
setopt HIST_SAVE_NO_DUPS
setopt SHARE_HISTORY
setopt EXTENDED_HISTORY

alias ls='exa --icons --group-directories-first'
alias ll='exa -lah --icons --group-directories-first --git'
alias cat='bat'
alias vim='{{ editor }}'
alias v='{{ editor }}'

alias g='git'
alias gs='git status -sb'
alias ga='git add'
alias gc='git commit'
alias gp='git push'
alias gl='git log --oneline --graph --all --decorate'

export GIT_AUTHOR_NAME="{{ name }}"
export GIT_AUTHOR_EMAIL="{{ email }}"
export GIT_COMMITTER_NAME="{{ name }}"
export GIT_COMMITTER_EMAIL="{{ email }}"

export GITHUB_USER="{{ github_username }}"

if [[ -f ~/.config/zsh/dev-aliases ]]; then
    source ~/.config/zsh/dev-aliases
fi

if [[ -f ~/.config/zsh/work-aliases ]]; then
    source ~/.config/zsh/work-aliases
fi

if command -v fzf &> /dev/null; then
    source <(fzf --zsh)
    export FZF_DEFAULT_COMMAND='fd --type f --hidden --follow --exclude .git'
    export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"
fi

if command -v mise &> /dev/null; then
    eval "$(mise activate zsh)"
fi

if command -v starship &> /dev/null; then
    eval "$(starship init zsh)"
fi
