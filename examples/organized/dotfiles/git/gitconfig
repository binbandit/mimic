[user]
    name = Developer Name
    email = dev@example.com

[core]
    editor = nvim
    pager = delta
    autocrlf = input
    excludesfile = ~/.gitignore_global
    whitespace = trailing-space,space-before-tab

[init]
    defaultBranch = main

[pull]
    rebase = true

[push]
    default = current
    autoSetupRemote = true
    followTags = true

[fetch]
    prune = true
    pruneTags = true

[rebase]
    autoStash = true
    autoSquash = true

[merge]
    conflictstyle = zdiff3
    tool = nvimdiff

[diff]
    colorMoved = zebra
    algorithm = histogram
    tool = nvimdiff

[log]
    date = relative

[status]
    showUntrackedFiles = all
    submoduleSummary = true

[alias]
    st = status -sb
    co = checkout
    cob = checkout -b
    br = branch
    brd = branch -d
    brD = branch -D
    ci = commit
    cia = commit --amend
    cian = commit --amend --no-edit
    unstage = reset HEAD --
    undo = reset --soft HEAD^
    last = log -1 HEAD
    lg = log --oneline --graph --decorate
    lga = log --oneline --graph --decorate --all
    ll = log --pretty=format:'%C(yellow)%h%Creset %C(cyan)%ad%Creset | %s%C(auto)%d%Creset %C(dim)- %an%Creset' --date=short
    d = diff
    dc = diff --cached
    ds = diff --stat
    dt = difftool
    aliases = config --get-regexp ^alias\\.

[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = green
    changed = yellow
    untracked = red

[delta]
    navigate = true
    light = false
    side-by-side = true
    line-numbers = true
    syntax-theme = Dracula
    plus-style = syntax "#003800"
    minus-style = syntax "#3f0001"

[delta "interactive"]
    keep-plus-minus-markers = false

[interactive]
    diffFilter = delta --color-only --features=interactive

[rerere]
    enabled = true
    autoUpdate = true

[help]
    autocorrect = 1
