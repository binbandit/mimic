# Generated by mimic for {{ host.name }}
# User: {{ system.username }}@{{ system.hostname }}
# OS: {{ system.os }}/{{ system.arch }}

# Editor configuration
set -gx EDITOR {{ variables.editor }}

# Work-specific configuration
{{#if (includes host.roles "work")}}
set -gx HTTP_PROXY "{{ variables.http_proxy }}"
set -gx HTTPS_PROXY "{{ variables.http_proxy }}"
set -gx NO_PROXY "localhost,127.0.0.1"

# Work development paths
set -gx WORK_DIR "$HOME/work"
{{/if}}

# Personal-specific configuration
{{#if (includes host.roles "personal")}}
set -gx OPENAI_MODEL "{{ variables.openai_model }}"
set -gx PROJECTS_DIR "$HOME/projects"
{{/if}}

# Host-specific aliases
{{#if (includes host.roles "work")}}
alias vpn-connect="sudo openconnect vpn.company.com"
alias work-ssh="ssh work-server"
{{/if}}

{{#if (includes host.roles "personal")}}
alias blog="cd ~/blog && hugo server"
{{/if}}

# Common configuration for all hosts
set -gx LC_ALL en_US.UTF-8
set -gx LANG en_US.UTF-8

# End of generated config
